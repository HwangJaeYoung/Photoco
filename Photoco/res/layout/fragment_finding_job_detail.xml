<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 맨위 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/layout_finding_job_detail_top"
            android:layout_width="360dp"
            android:layout_height="147dp"
            android:background="#fff"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="7dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_finding_job_detail_user_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:text="kim12795&apos;s Request"
                    android:textColor="#808a99"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="19dp"
                    android:text="Eighty precent of success is showing up.Eighty precent of success is showing up.Eighty precent of success is showing up."
                    android:textColor="#323a45"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="10dp" >

                <ImageButton
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/bt_finding_job_detail"
                    android:src="@drawable/textlogo_small" />
            </LinearLayout>
        </LinearLayout>
        <!-- 맨위 -->


        <!-- 두번째 -->

        <LinearLayout
            android:id="@+id/layout_finding_job_detail_mid"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_finding_job_detail_top"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_finding_job_detail_category"
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/category_ic" />

                <TextView
                    android:id="@+id/tv_finding_job_detail_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/iv_finding_job_detail_category"
                    android:text="Category"
                    android:textColor="#808a99"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_finding_job_detail_category_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:text="LandScape"
                    android:textColor="#323a45"
                    android:textSize="18sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="150dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_finding_job_detail_tag"
                        android:layout_width="18dp"
                        android:layout_height="17dp"
                        android:layout_marginLeft="17dp"
                        android:src="@drawable/tag_ic" />

                    <TextView
                        android:id="@+id/tv_finding_job_detail_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="17dp"
                        android:text="Tag"
                        android:textColor="#808a99"
                        android:textSize="18sp" />
                </LinearLayout>
                <!-- GridView -->

                <GridView
                    android:id="@+id/gridView"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:columnWidth="69dp"
                    android:numColumns="3" >
                </GridView>
                <!-- GridView -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_finding_job_detail_location"
                        android:layout_width="18dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:src="@drawable/gps_ic" />

                    <TextView
                        android:id="@+id/tv_finding_job_detail_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/iv_finding_job_detail_location"
                        android:text="Location"
                        android:textColor="#808a99"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_finding_job_detail_location_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:text="Newyourk,USA"
                        android:textColor="#323a45"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_finding_job_detail_timeleft"
                        android:layout_width="18dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:src="@drawable/time_ic" />

                    <TextView
                        android:id="@+id/tv_finding_job_detail_timeleft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/iv_finding_job_detail_timeleft"
                        android:text="Time left"
                        android:textColor="#808a99"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_finding_job_detail_timeleft_detail_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="13dp"
                        android:layout_marginTop="4dp"
                        android:text="7 Days"
                        android:textColor="#ffc868"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_finding_job_detail_timeleft_detail_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_finding_job_detail_timeleft_detail_day"
                        android:layout_marginRight="13dp"
                        android:layout_marginTop="4dp"
                        android:text="2013/09/20"
                        android:textColor="#323a45"
                        android:textSize="13sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- 두번째 -->


        <!-- 세번째 -->

        <LinearLayout
            android:id="@+id/layout_finding_job_detail_bottom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:orientation="horizontal" >

            <Button
                android:layout_width="96dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bt_job_detail_hide"
                android:text="Hide"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:layout_width="219dp"
                android:layout_height="60dp"
                android:background="@drawable/bt_job_detail_participate"
                android:text="Participate!"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>
        <!-- 세번째 -->

    </RelativeLayout>

</LinearLayout>