<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <!-- 리스트 유동적인부분 -->

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="vertical" >

        <com.loopj.android.image.SmartImageView
            android:id="@+id/siv_list_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#fff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_list_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="4dp"
            android:text="kimkwangkuk"
            android:textColor="#323a45"
            android:textSize="20sp" />

        <View
            android:id="@+id/tip"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/tv_list_account_name" />

        <TextView
            android:id="@+id/tv_list_account_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tip"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="3dp"
            android:text="14/07/16"
            android:textColor="#ffb0bac8" />

        <Button
            android:id="@+id/bt_list_cart_arrow"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/arrow_ic" />

        <Button
            android:id="@+id/bt_list_cart_unit"
            android:layout_width="36dp"
            android:layout_height="19dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bt_list_cart_arrow"
            android:background="#ff89d854"
            android:text="Buy"
            android:textColor="#fff"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>