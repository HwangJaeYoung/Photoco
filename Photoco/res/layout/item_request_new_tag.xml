<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_list_request_new_tag"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#fff" >

        <ImageView
            android:id="@+id/iv_list_request_new_tag"
            android:layout_width="15dp"
            android:layout_height="14.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/tag_ic" />

        <TextView
            android:id="@+id/tv_myrequest_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_list_request_new_tag"
            android:text="Text"
            android:textColor="#323a45"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_myrequest_tag_cancel"
            android:layout_width="62dp"
            android:layout_height="49dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bt_request_new_tag_delete" />
    </RelativeLayout>

</LinearLayout>