<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/layout_request_tag_new"
        android:layout_height="49dp" >

        <ImageView
            android:id="@+id/iv_request_timeleft"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/tag_ic" />

        <EditText
            android:id="@+id/tv_request_timeleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_request_timeleft"
            android:background="#fff"
            android:hint="Input Tag.."
            android:textSize="18sp"
            android:textColor="#323a45"
            android:textColorHint="#b0bac8" />

        <Button 
            android:id="@+id/bt_myrequest_tag_cancel"
            android:layout_width="62dp"
            android:layout_height="49dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bt_request_new_tag_delete"
            />
    </RelativeLayout>

</LinearLayout>