<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <LinearLayout
        android:id="@+id/layout_job_list_job_detail_layout_top"
        android:layout_width="360dp"
        android:layout_height="147dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="7dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_joblist_detail_user_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text="kim12795&apos;s Request"
                android:textColor="#808a99"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_joblist_detail_user_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:layout_marginTop="19dp"
                android:text="Eighty precent of success is showing up.Eighty precent of success is showing up.Eighty precent of success is showing up."
                android:textColor="#323a45"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp" >

            <com.loopj.android.image.SmartImageView
                android:id="@+id/siv_joblist_detail_user_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/bt_finding_job_detail"
                android:scaleType="fitXY"
                android:src="@drawable/textlogo_small" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/layout_job_list_job_detail_layout_top"
        android:background="#dde6f2" />

    <LinearLayout
        android:id="@+id/layout_job_list_job_detail_layout_middle"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_job_list_job_detail_category"
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:src="@drawable/category_ic" />

            <TextView
                android:id="@+id/tv_job_list_job_detail_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/iv_job_list_job_detail_category"
                android:text="Category"
                android:textColor="#808a99"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_joblist_detail_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:text="Landscape"
                android:textColor="#b0bac8"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dde6f2" />

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="130dp"
                    android:layout_height="49dp" >

                    <ImageView
                        android:id="@+id/iv_job_list_job_detail_tag"
                        android:layout_width="18dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:src="@drawable/tag_ic" />

                    <TextView
                        android:id="@+id/tv_job_list_job_detail_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:layout_toRightOf="@id/iv_job_list_job_detail_tag"
                        android:text="Tag"
                        android:textColor="#808a99"
                        android:textSize="18sp" />
                </RelativeLayout>

                <GridView
                    android:id="@+id/gv_joblist_detail_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="10dp"
                    android:numColumns="3"
                    android:verticalSpacing="5.5dp" >
                </GridView>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dde6f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_job_list_job_detail_location"
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/gps_ic" />

                <TextView
                    android:id="@+id/tv_job_list_job_detail_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/iv_job_list_job_detail_location"
                    android:text="Location"
                    android:textColor="#808a99"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_joblist_detail_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:text="Newyourk,USA"
                    android:textColor="#323a45"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dde6f2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_request_new_duration"
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/time_ic" />

                <TextView
                    android:id="@+id/tv_request_new_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/iv_request_new_duration"
                    android:text="Time left"
                    android:textColor="#808a99"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_joblist_detail_leftday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="4dp"
                    android:text="7 Days"
                    android:textColor="#ffc868"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_joblist_detail_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/tv_joblist_detail_leftday"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="4dp"
                    android:text="2013/09/20"
                    android:textColor="#323a45"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#dde6f2" />
    </LinearLayout>
    <!-- 두번째 -->


    <!-- 세번째 -->

    <RelativeLayout
        android:id="@+id/layout_job_list_job_detail_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_alignParentBottom="true"
        android:background="#323a45"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_submit_photo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="15dp"
            android:background="@drawable/bt_job_detail_participate"
            android:src="@drawable/camera_ic"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>
    <!-- 세번째 -->

</RelativeLayout>