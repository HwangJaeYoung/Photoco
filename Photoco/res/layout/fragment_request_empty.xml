<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ListView
            android:id="@+id/lv_myrequest_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#dde6f2"
            android:divider="@android:color/transparent" >
        </ListView>

        <LinearLayout
            android:id="@+id/layout_request_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_myrequest_empty_face"
                android:layout_width="108dp"
                android:layout_height="107dp"
                android:layout_marginTop="168dp"
                android:src="@drawable/empty_face_ic" />

            <TextView
                android:id="@+id/tv_myrequest_empty1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="No requests."
                android:textColor="#afb9c1"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_myrequest_empty2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Request photo with button"
                android:textColor="#afb9c1"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/iv_myrequest_empty_arrow"
                android:layout_width="28dp"
                android:layout_height="56dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/empty_allow_ic" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_weight="0"
        android:alpha="0.9"
        android:background="#323a45"
        android:gravity="center" >

        <Button
            android:id="@+id/bt_create_request"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/bt_create_account"
            android:text="New Request"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>