<?xml version="1.0" encoding="utf-8"?>

<!--
     여기서 맨 처음의 LinearLayout에 있는 layout_width, layout_height는 
     자신이 위치 할 레이아웃에게 자신의 배치 정보를 명시해 놓은 것이다.
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <!-- 리스트 유동적인부분 -->

    <LinearLayout
        android:id="@+id/ll_findjoblist_smile_image"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/urgent_ic" />

        <TextView
            android:id="@+id/tv_left_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="3h left"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="#fff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_listv_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:text="Landscape"
            android:textColor="#323a45"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_list_name"
                android:layout_width="11dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/name_small_ic" />

            <TextView
                android:id="@+id/tv_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="100dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/iv_list_name"
                android:text="Namgu&apos;s Request" />

            <ImageView
                android:id="@+id/bt_list_name"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="9.5dp"
                android:background="@drawable/arrow_ic" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_list_tag_first"
                android:layout_width="69dp"
                android:layout_height="21dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/tag_bg"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Cafeasdfdafsaff"
                android:textColor="#fff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt_list_tag_second"
                android:layout_width="69dp"
                android:layout_height="21dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/tag_bg"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Coffeegsgsdgasg"
                android:textColor="#fff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt_list_tag_third"
                android:layout_width="69dp"
                android:layout_height="21dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/tag_bg"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Notebookasfsafsfs"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>