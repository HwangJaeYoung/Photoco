<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_findingjoblist_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dde6f2"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_findingjoblist_empty_face"
            android:layout_width="108dp"
            android:layout_height="107dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/empty_face_ic" />

        <TextView
            android:id="@+id/tv_findingjoblist_empty1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="No findingjob list."
            android:textColor="#afb9c1"
            android:textSize="25sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_request_finding_job_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#dde6f2"
        android:dividerHeight="0.5dp" >
    </ListView>

    <ProgressBar
        android:id="@+id/pb_findingjoblist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>