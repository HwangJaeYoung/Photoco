<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dde6f2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#fff" >

            <TextView
                android:id="@+id/tv_request_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:text="Landscape"
                android:textColor="#323a45"
                android:textSize="20sp" />

        </RelativeLayout>

        <!-- tag -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <ImageView
                android:id="@+id/iv_request_tag"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/tag_ic" />

            <TextView
                android:id="@+id/tv_request_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_request_tag"
                android:text="Tag"
                android:textColor="#808a99" />

            <LinearLayout
                android:id="@+id/layout_request_tag"
                android:layout_width="330dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bt_list_tag_first"
                    android:layout_width="69dp"
                    android:layout_height="21dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/tag_bg"
                    android:text="Cafe"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/bt_list_tag_second"
                    android:layout_width="69dp"
                    android:layout_height="21dp"
                    android:layout_marginRight="7dp"
                    android:background="@drawable/tag_bg"
                    android:text="Coffee"
                    android:textColor="#fff"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/bt_list_tag_third"
                    android:layout_width="69dp"
                    android:layout_height="21dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/tag_bg"
                    android:text="Notebook"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
        <!-- location -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <ImageView
                android:id="@+id/iv_request_location"
                android:layout_width="11dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/gps_ic" />

            <TextView
                android:id="@+id/tv_request_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_request_location"
                android:text="Location"
                android:textColor="#808a99" />

            <TextView
                android:id="@+id/tv_request_location_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="Newyork, USA" />
        </RelativeLayout>

        <!-- Time Left -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <ImageView
                android:id="@+id/iv_request_timeleft"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/time_ic" />

            <TextView
                android:id="@+id/tv_request_timeleft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_request_timeleft"
                android:text="Time Left"
                android:textColor="#808a99" />

            <TextView
                android:id="@+id/tv_request_timeleft_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="7day(2014/06/30)"
                android:textColor="#abd856" />
        </RelativeLayout>

        <!-- Desc -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <ImageView
                android:id="@+id/iv_request_desc"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/descripton_ic" />

            <TextView
                android:id="@+id/tv_request_dsec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_request_desc"
                android:text="Desc"
                android:textColor="#808a99" />

            <TextView
                android:id="@+id/tv_request_desc_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="People Hoping out at the bar.." />
        </RelativeLayout>

        <!-- Photo -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <ImageView
                android:id="@+id/iv_request_photo"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/photo_ic" />

            <TextView
                android:id="@+id/tv_request_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_request_photo"
                android:text="Photo(0)"
                android:textColor="#808a99" />

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" >

                <TextView
                    android:id="@+id/tv_request_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="No Photo"
                    android:textColor="#323a45"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_request_photo_right"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="#cdd8e2"
                    android:src="@drawable/textlogo_small" />

                <ImageView
                    android:id="@+id/iv_request_photo_new_right"
                    android:layout_width="18dp"
                    android:layout_height="19dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/newbadge_ic" />

                <ImageView
                    android:id="@+id/iv_request_photo_mid"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/iv_request_photo_right"
                    android:background="#cdd8e2"
                    android:src="@drawable/textlogo_small" />

                <ImageView
                    android:id="@+id/iv_request_photo_new_mid"
                    android:layout_width="18dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="12dp"
                    android:layout_toLeftOf="@id/iv_request_photo_right"
                    android:background="@drawable/newbadge_ic" />

                <ImageView
                    android:id="@+id/iv_request_photo_left"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/iv_request_photo_mid"
                    android:background="#cdd8e2"
                    android:src="@drawable/textlogo_small" />

                <ImageView
                    android:id="@+id/iv_request_photo_new_left"
                    android:layout_width="18dp"
                    android:layout_height="19dp"
                    android:layout_marginTop="12dp"
                    android:layout_toLeftOf="@id/iv_request_photo_mid"
                    android:background="@drawable/newbadge_ic"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>