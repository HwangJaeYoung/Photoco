<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <!-- 맨위 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="360dp"
            android:layout_height="147dp"
            android:background="#fff"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="7dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_finding_job_detail_user_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:text="kim12795&apos;s Request"
                    android:textColor="#808a99"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_finding_job_list_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="13dp"
                    android:layout_marginTop="19dp"
                    android:text="Eighty precent of success is showing up.Eighty precent of success is showing up.Eighty precent of success is showing up."
                    android:textColor="#323a45"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="116dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="10dp" >

                <com.loopj.android.image.SmartImageView
                    android:id="@+id/siv_finding_job_list_detail_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="48dp"
                    android:background="@drawable/bt_finding_job_detail"
                    android:src="@drawable/textlogo_small" />
            </LinearLayout>
        </LinearLayout>
        <!-- 맨위 -->

        <View
            android:id="@+id/tip1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/top"
            android:background="#DDE6F2" />

        <!-- 두번째 -->

        <LinearLayout
            android:id="@+id/mid"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tip1"
            android:background="#fff"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_finding_job_detail_category"
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/category_ic" />

                <TextView
                    android:id="@+id/tv_finding_job_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/iv_finding_job_detail_category"
                    android:text="Category"
                    android:textColor="#808a99"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_finding_job_detail_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:text="LandScape"
                    android:textColor="#323a45"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:id="@+id/tip2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#DDE6F2" />

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="49dp" >

                        <ImageView
                            android:id="@+id/iv_finding_job_detail_tag"
                            android:layout_width="18dp"
                            android:layout_height="17dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/tag_ic" />

                        <TextView
                            android:id="@+id/tv_finding_job_detail_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:layout_toRightOf="@id/iv_finding_job_detail_tag"
                            android:text="Tag"
                            android:textColor="#808a99"
                            android:textSize="18sp" />
                    </RelativeLayout>
                    <!-- GridView -->

                    <GridView
                        android:id="@+id/gv_finding_job_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="10dp"
                        android:numColumns="3"
                        android:verticalSpacing="5.5dp" >
                    </GridView>
                    <!-- GridView -->
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/tip2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#DDE6F2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_finding_job_detail_location"
                        android:layout_width="18dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:src="@drawable/gps_ic" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/iv_finding_job_detail_location"
                        android:text="Location"
                        android:textColor="#808a99"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_finding_job_detail_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:text="Newyourk,USA"
                        android:textColor="#323a45"
                        android:textSize="18sp" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:id="@+id/tip3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#DDE6F2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/iv_finding_job_detail_timeleft"
                        android:layout_width="18dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:src="@drawable/time_ic" />

                    <TextView
                        android:id="@+id/tv_finding_job_detail_timeleft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@id/iv_finding_job_detail_timeleft"
                        android:text="Time left"
                        android:textColor="#808a99"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_finding_job_detail_timeleft_detail_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="13dp"
                        android:layout_marginTop="3dp"
                        android:text="7 Days"
                        android:textColor="#ffc868"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_finding_job_detail_timeleft_detail_calendar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_finding_job_detail_timeleft_detail_day"
                        android:layout_marginRight="13dp"
                        android:layout_marginTop="2dp"
                        android:text="2013/09/20"
                        android:textColor="#323a45"
                        android:textSize="13sp" />

                    <View
                        android:id="@+id/tip4"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="#DDE6F2" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- 두번째 -->

        <View
            android:id="@+id/tip2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/top"
            android:background="#DDE6F2" />

        <!-- 세번째 -->

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/mid"
            android:layout_margin="15dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_finding_job_detail_hide"
                android:layout_width="96dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="10dp"
                android:background="@drawable/bt_job_detail_hide"
                android:text="Hide"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt_finding_job_detail_participate"
                android:layout_width="219dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:background="@drawable/bt_job_detail_participate"
                android:text="Participate!"
                android:textColor="#fff"
                android:textSize="20sp" />
        </LinearLayout>
        <!-- 세번째 -->
    </RelativeLayout>

</LinearLayout>