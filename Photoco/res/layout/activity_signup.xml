<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="147dp"
        android:layout_height="147dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/logo2" />

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:text="Nice to meet you."
        android:textColor="#5f6773"
        android:textSize="31sp" />

    <TextView
        android:id="@+id/tv_signup_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:text="Thank you for spanding your time"
        android:textColor="#bcc6d6"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:layout_marginTop="15dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/name_ic" />

        <EditText
            android:id="@+id/et_signup_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:background="#fff"
            android:gravity="left|center"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textColor="#323a45"
            android:textColorHint="#b0bac8"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#dde6f2" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/email_ic" />

        <EditText
            android:id="@+id/et_signup_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:background="#fff"
            android:gravity="left|center"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="#323a45"
            android:textColorHint="#b0bac8"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#dde6f2" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="16dp"
            android:layout_height="17dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/lock_ic" />

        <EditText
            android:id="@+id/et_signup_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:background="#fff"
            android:gravity="left|center"
            android:hint="Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#323a45"
            android:textColorHint="#b0bac8"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#dde6f2" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="23dp"
            android:layout_height="22dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/unlock_ic" />

        <EditText
            android:id="@+id/et_signup_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="30dp"
            android:background="#fff"
            android:gravity="left|center"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textColor="#323a45"
            android:textColorHint="#b0bac8"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#dde6f2" />

    <LinearLayout
        android:id="@+id/ll_search_location"
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="14dp"
            android:layout_height="22dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/gps_ic" />

        <TextView
            android:id="@+id/tv_signup_location"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:background="#fff"
            android:gravity="left|center"
            android:hint="Country, City"
            android:textColor="#323a45"
            android:textColorHint="#b0bac8"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/arrow_ic" />
    </LinearLayout>

    <View
        android:layout_width="330dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="#dde6f2" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="49dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_signup_agree"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:text="Agree to terms and conditions"
            android:textColor="@drawable/tv_signup_agree"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/cb_signup_agree"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_marginLeft="20dp"
            android:checked="false"
            android:gravity="center_vertical" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="23dp"
        android:background="#62caf7"
        android:gravity="center" >

        <com.continueing.photoco.reuse.widget.SubmitButton
            android:id="@+id/bt_create_ac"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/bt_create_account"
            android:text="Sign up"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/pg_sign_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>