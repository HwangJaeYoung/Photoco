<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/ll_cart_empty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#dde6f2"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_cart_empty_face"
                    android:layout_width="108dp"
                    android:layout_height="107dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/empty_face_ic" />

                <TextView
                    android:id="@+id/tv_cart_empty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="No cart"
                    android:textColor="#afb9c1"
                    android:textSize="25sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/list_view_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >
            </ListView>

            <ProgressBar
                android:id="@+id/pb_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:layout_weight="0"
        android:alpha="0.9"
        android:background="#323a45"
        android:gravity="center" >

        <ImageButton
            android:id="@+id/ib_cart_remove_item"
            android:layout_width="96dp"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bt_job_detail_hide"
            android:src="@drawable/remove_btn_default"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_cart_buy_item"
            android:layout_width="219dp"
            android:layout_height="60dp"
            android:background="@drawable/bt_job_detail_participate"
            android:text="Buy(3photo, 10P)"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>