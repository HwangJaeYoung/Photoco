<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc" >

    <com.loopj.android.image.SmartImageView
        android:id="@+id/siv_request_detail_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="72dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="223dp"
        android:src="@drawable/watermark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_alignParentBottom="true" >

        <RelativeLayout
            android:id="@+id/layout_request_detail_location"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true" >

            <ImageView
                android:id="@+id/iv_request_detail_location"
                android:layout_width="21dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="21dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/gps2_ic" />

            <TextView
                android:id="@+id/tv_request_detail_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_request_detail_location"
                android:alpha="0.8"
                android:text="Newyork, USA"
                android:textColor="#fff" />

            <Button
                android:id="@+id/bt_request_detail_add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_request_detail_location" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_request_detail_info"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_above="@id/layout_request_detail_location" >

            <Button
                android:id="@+id/bt_request_detail_size_info"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/size_big"
                android:text="L"
                android:textColor="#fff"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_request_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/bt_request_detail_size_info"
                android:text="25"
                android:textColor="#fff"
                android:textSize="39sp" />

            <TextView
                android:id="@+id/tv_request_detail_price_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_request_detail_price"
                android:text="$"
                android:textColor="#fff"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tv_request_detail_image_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:text="1280 x 720"
                android:textColor="#fff"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>