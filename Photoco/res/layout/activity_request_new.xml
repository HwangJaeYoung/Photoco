<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="19dp"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_request_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:hint="Description."
                android:textColor="#323a45"
                android:textColorHint="#b0bac8" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="19dp" >

            <ImageView
                android:id="@+id/bt_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/bt_request_new_add_image"
                android:text="Add\nImage"
                android:textColor="#b0bac8"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_middle"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_request_tag"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_request_new_tag"
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:src="@drawable/tag_ic" />

            <TextView
                android:id="@+id/tv_request_new_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/iv_request_new_tag"
                android:text="Tag"
                android:textColor="#808a99"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt_request_new_tag_detail"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/arrow_ic" />

            <TextView
                android:id="@+id/tv_request_new_tag_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:layout_toLeftOf="@id/bt_request_new_tag_detail"
                android:text="Input Tag"
                android:textColor="#b0bac8"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_request_cateory"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_request_new_category"
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:src="@drawable/category_ic" />

            <TextView
                android:id="@+id/tv_request_new_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/iv_request_new_category"
                android:text="Category"
                android:textColor="#808a99"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bt_request_new_category_detail"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/arrow_ic" />

            <TextView
                android:id="@+id/tv_request_new_category_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:layout_toLeftOf="@id/bt_request_new_category_detail"
                android:text="Select Category"
                android:textColor="#b0bac8"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_request_location"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_request_new_location"
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/gps_ic" />

                <TextView
                    android:id="@+id/tv_request_new_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/iv_request_new_location"
                    android:text="Location"
                    android:textColor="#808a99"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/bt_request_new_location_detail"
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/arrow_ic" />

                <TextView
                    android:id="@+id/tv_request_new_location_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:layout_toLeftOf="@id/bt_request_new_location_detail"
                    android:text="Newyourk,USA"
                    android:textColor="#b0bac8"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_select_duration"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_request_new_duration"
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/time_ic" />

                <TextView
                    android:id="@+id/tv_request_new_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/iv_request_new_duration"
                    android:text="Duration"
                    android:textColor="#808a99"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/bt_request_new_duration"
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/arrow_ic" />

                <TextView
                    android:id="@+id/tv_request_new_duration_detail_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="4dp"
                    android:layout_toLeftOf="@id/bt_request_new_duration"
                    android:text="Select Duration"
                    android:textColor="#b0bac8"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_request_new_duration_detail_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_request_new_duration_detail_day"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="4dp"
                    android:layout_toLeftOf="@id/bt_request_new_duration"
                    android:text="End Date"
                    android:textColor="#b0bac8"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 두번째 -->


    <!-- 세번째 -->

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_request_new_submit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bt_job_detail_participate"
            android:text="Submit"
            android:textColor="#fff"
            android:textSize="20sp" />
    </RelativeLayout>
    <!-- 세번째 -->

</RelativeLayout>